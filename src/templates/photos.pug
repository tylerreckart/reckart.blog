doctype html
html(lang="en")
  head
    if seo.title
      title=seo.title
    else
      title=""
    if seo.description
      meta(name="description", content=seo.description)
    else
      meta(name="description", content="")
    include components/head.pug
  body
    include components/nav.pug
    main.content.gallery--container
      div.page--header
        h1 Photo Collections
      div#photo-gallery--section-wrapper
        each section in gallery
          div.photo-gallery--image
            a(href=section.path)
              img(src=section.featuredImage, class="gallery--img")
            span=section.title
      include components/newsletter-form.pug
      include components/footer.pug
