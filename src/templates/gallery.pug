doctype html
html(lang="en")
  head
    if seo.title
      title=seo.title
    else
      title=""
    if seo.description
      meta(name="description", content=seo.description)
    else
      meta(name="description", content="")
    include components/head.pug
  body
    include components/nav.pug
    main.content
      div.page--header
        h1=gallery.title
      div.inner--gallery-wrapper
        div#gallery--image-wrapper
          each photo in gallery.images
            div.gallery--content-wrapper
              img(src=photo.src, class="gallery-page--image")
              div.attribution--wrapper
                  span=photo.title
                  span.year="| " + (photo.location || "") + ", " + photo.year
        div.colophon
          |  !{gallery.colophon}
      include components/footer.pug
