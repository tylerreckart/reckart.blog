doctype html
html(lang="en")
  head
    title!=attributes.title
    meta(name="description", content=attributes.description)
    meta(property="og:url", content!="https://tylerreckart.com/" + path)
    meta(property="og:type", content="article")
    meta(property="og:title", content=attributes.title)
    meta(property="og:description", content=attributes.description)
    if attributes.featuredImage
      meta(property="og:image", content=attributes.featuredImage)
    meta(property="article:published_time", content!=(new Date(Date.parse(attributes.date))).toISOString())
    meta(property="article:author", content="Tyler Reckart")
    meta(property="twitter:site", content="@tylerreckart")
    meta(property="twitter:card", content="summary_large_image")
    if attributes.featuredImage
      meta(name="twitter:image", content=attributes.featuredImage)
    meta(name="twitter:url", content="https://tylerreckart.com/" + path)
    meta(name="twitter:description", content=attributes.description)
    meta(name="twitter:title", content=attributes.title)
    include includes/head.pug
  body
    if attributes.featuredImage
      div.featured-image--container(style!="background-image: url(" + attributes.featuredImage + ");")
    div.content
      article.article-page--wrapper
        div.article--header
          h1=attributes.title
          span=attributes.date
        div.article--content
          | !{body}
      include includes/footer.pug
